<view class="container"><view class="header"><text class="system-title">图书管理系统</text></view><view class="search-box"><input class="search-input" type="text" placeholder="搜索书名、作者或分类" value="{{a}}" bindinput="{{b}}"/><button class="search-btn" bindtap="{{c}}">搜索</button></view><view class="function-buttons"><view class="function-btn" bindtap="{{d}}"><text class="btn-icon">+</text><text class="btn-text">添加图书</text></view><view class="function-btn" bindtap="{{e}}"><text class="btn-icon">↗</text><text class="btn-text">借阅管理</text></view><view class="function-btn" bindtap="{{f}}"><text class="btn-icon">≡</text><text class="btn-text">分类管理</text></view><view class="function-btn" bindtap="{{g}}"><text class="btn-icon">👤</text><text class="btn-text">用户管理</text></view></view><view class="book-list"><text class="section-title">图书列表</text><view wx:for="{{h}}" wx:for-item="book" wx:key="h" class="book-item" bindtap="{{book.i}}"><image class="book-cover" src="{{book.a}}"></image><view class="book-info"><text class="book-title">{{book.b}}</text><text class="book-author">作者: {{book.c}}</text><text class="book-category">分类: {{book.d}}</text><text class="{{['book-status', book.f && 'available', book.g && 'borrowed']}}">{{book.e}}</text></view></view><view wx:if="{{i}}" class="empty-tip"><text>暂无图书数据</text></view></view></view>